<project name = "esm"
         optflags = "-O0">

    <cflags>
        -std=gnu99 -g \
    </cflags>

    <exec name = "blink">
        <includes>
            <dir name = "include"/>
        </includes>
        <sources>
            <file name = "src/main.c"/>
            <file name = "src/blink.c"/>
            <dir name = "core"/>
        </sources>
    </exec>

    <exec name = "dpp">
        <includes>
            <dir name = "include"/>
        </includes>
        <sources>
            <file name = "src/main.c"/>
            <file name = "src/philo.c"/>
            <file name = "src/table.c"/>
            <dir name = "core"/>
        </sources>
    </exec>

</project>
