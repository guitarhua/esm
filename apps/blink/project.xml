<project name = "esm"
         optflags = "-O0">

    <cflags>
        -std=gnu99 -g -Werror \
    </cflags>

    <exec name = "blink">
        <includes>
            <dir name = "include"/>
            <dir name = "../../core/include"/>
            <dir name = "../../trace/include"/>
            <dir name = "../../platform/linux/include"/>
        </includes>
        <sources>
            <dir name = "../../core/src"/>
            <dir name = "../../trace/src"/>
            <dir name = "../../platform/linux/src"/>
            <dir name = "src"/>
        </sources>
    </exec>

</project>
